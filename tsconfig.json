// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ES2017",
    "lib": ["dom", "es2015", "es2016", "esnext"],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "~*": ["./*"],
      "~state-machines/*": ["state-machines/*"],
      "~util/*": ["util/*"],
      "~components/*": ["views/components/*"],
      "~views/*": ["views/*"]
    }
  }
}
